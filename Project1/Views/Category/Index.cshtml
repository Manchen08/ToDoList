@model IEnumerable<DBConnect.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Add New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CategoryID }) |
            @Html.ActionLink("Search", "../ToDoList/Search", new { id = item.CategoryID })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer }) | 
    @Html.ActionLink("Back to To Do Lists", "../ToDoList/Index")
</div>