@model Project1.Models.ToDoListItemsViewModel


@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.ID = Model.list.ToDoListID;
}

<h2>@Model.list.Name</h2>

<p>
    @Html.ActionLink("Create New Item", "Create", new { id = ViewBag.ID} )
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Completed
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.items) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsComplete)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemID, listId=Model.list.ToDoListID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemID }, new { onclick = "return confirm('Are you sure you want to delete this item?')" })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Back", null, null, null, new { href = Request.UrlReferrer }) |
    @Html.ActionLink("Back to To Do Lists", "../ToDoList/Index")
</div>